                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:background="@color/colorWhite"
                                        android:layout_marginRight="1dp"
                                        android:layout_marginBottom="1dp"
                                        android:id="@+id/resultMercury"
                                        />

                                </TableRow>





