                                        android:text="Copper"
                                        android:textStyle="bold"
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:background="@color/colorWhite"
                                        android:layout_marginBottom="1dp"
                                        android:layout_marginHorizontal="1dp"
                                        />

                                    <TextView
                                        android:id="@+id/tableCopper"
