<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:background="@color/colorWhite"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/open_sans_semibold"
                        android:gravity="center"
                        android:text="EBN Scan Results"
                        android:textColor="@color/colorBlack"
                        android:textSize="21sp"/>

                    <!-- Image -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/results"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:gravity="center"
                            android:text="REAL"
                            android:textStyle="bold"
                            android:textSize="120dp"/>

                        <pl.droidsonroids.gif.GifImageView
                            android:id="@+id/graph"
                            android:clickable="true"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:src="@drawable/loading"
                            android:layout_gravity="center"/>
                    </LinearLayout>

                    <!-- Scan Details -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="@color/colorGrey"
                        app:cardPreventCornerOverlap="false">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="15dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/brand"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:textAllCaps="true"
                                    android:textColor="@color/colorBlack"
                                    android:text="Brand: " />

                                <TextView
                                    android:id="@+id/brandValue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:textAllCaps="true"
                                    android:textColor="@color/colorBlack"
                                    android:text="word"
                                     />

                            </LinearLayout>

                            <TextView
                                android:id="@+id/space1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="10sp"
                                android:textColor="@color/colorBlack" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/countryOrigin"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:textAllCaps="true"
                                    android:textColor="@color/colorBlack"
                                    android:text="Country of Origin:" />

                                <TextView
                                    android:id="@+id/countryOriginValue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:textAllCaps="true"
                                    android:textColor="@color/colorBlack" />

                            </LinearLayout>


                            <TextView
                                android:id="@+id/space2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="10sp"
                                android:textColor="@color/colorBlack"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/acidityLevel"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:textAllCaps="true"
                                    android:textColor="@color/colorBlack"
                                    android:text="Acidity Level(%):" />

                                <TextView
                                    android:id="@+id/acidityLevelValue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:textAllCaps="true"
                                    android:textColor="@color/colorBlack" />

                            </LinearLayout>


                            <TextView
                                android:id="@+id/space3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="10sp"
                                android:textColor="@color/colorBlack"/>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/resultState"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:textAllCaps="true"
                                    android:textColor="@color/colorBlack"
                                    android:text="Result State:" />

                                <TextView
                                    android:id="@+id/resultStateValue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:textAllCaps="true"
                                    android:textColor="@color/colorBlack" />

                            </LinearLayout>

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <!-- Bottom nav -->
                    <include
                        layout="@layout/bottom_nav"/>

                </LinearLayout>

            </FrameLayout>

    </LinearLayout>

</RelativeLayout>